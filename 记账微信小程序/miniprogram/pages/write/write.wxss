/* pages/write/write.wxss */
page {
  padding-top: 54rpx;
  background-color: #f6f6f6;
  padding-bottom: 60rpx;
}
.table {
  width: 100%;
  border-collapse: collapse;
  border: 1px solid #ccc;
}

.row {
  width: 100%;
  display: flex;
  align-items: center;
  height: 40px;
  border-bottom: 1px solid #ccc;
}

.cell {
  flex: 1;
  text-align: center;
  border-right: 1px solid #ccc;
}

.cell:last-child {
  border-right: none;
}

.input {
  width: 100%;
  height: 100%;
  border: none;
  outline: none;
  text-align: center;
}

.container{
  background-color:#41B577;
  height:2000rpx;
  margin:0;
}

.shouru{
  font-size:32px;
  color:rgb(34, 155, 109);
  box-shadow: 0 2px #999; /* 设置阴影效果 */
  background-color: rgb(225, 228, 46); /* 设置按钮背景颜色为白色 */
  border-color: #999; /* 设置边框颜色为灰色 */
  border-radius: 20px; /* 设置按钮圆角为20px */
}
.zhichu{
  font-size:32px;
