/* pages/zhichu/index.wxss */

.table {
  width: 100%;
  border-collapse: collapse;
  border: 1px solid #ccc;
}

.row {
  width: 100%;
  display: flex;
  align-items: center;
  height: 40px;
  border-bottom: 1px solid #ccc;
}

.cell {
  flex: 1;
  text-align: center;
  border-right: 1px solid #ccc;
}

.cell:last-child {
  border-right: none;
}

.input {
  width: 100%;
  height: 100%;
  border: none;
  outline: none;
  text-align: center;
}

.container {
  background-image: url('https://img.zcool.cn/community/0134745d0e4b7ea801213ec2afb9b1.jpg@1280w_1l_2o_100sh.jpg');
  background-size: cover;
}



.r1{
   width: 580rpx;
   height: 80rpx;
   display: flex;
   justify-content: center;
}
.item{
  font-size: large;
    width: 200rpx;
    height: 80rpx;
    border-radius: 20rpx;
    margin: 0 30rpx;
    background-color:rgb(116, 168, 175);
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
}
.item_active{
  font-size:larger;
    width: 200rpx;
    height: 80rpx;
    border-radius: 20rpx;
    margin: 0 30rpx;
    background-color:#41B577;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
}

.submit{
  font-size:17px;
  color:white;
  box-shadow: 0 2px #999; /* 设置阴影效果 */
  background-color: #41B577; /* 设置按钮背景颜色为白色 */
  border-color: #999; /* 设置边框颜色为灰色 */
  border-radius: 20px; /* 设置按钮圆角为20px */
}

.reset{
  font-size:17px;
  color:white;
  box-shadow: 0 2px #999; /* 设置阴影效果 */
  background-color: #41B577; /* 设置按钮背景颜色为白色 */
  border-color: #999; /* 设置边框颜色为灰色 */
  border-radius: 20px; /* 设置按钮圆角为20px */
}